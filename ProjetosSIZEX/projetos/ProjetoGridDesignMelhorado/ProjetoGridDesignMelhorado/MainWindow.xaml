<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SIZEX -Porque sua empresa é única!" Height="400" Width="800" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="#e5e8b6">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="{DynamicResource cor-bottomMenu}">
                <Label Name="ProdutoMnu" Content="Cadastro de Produtos" Foreground="White" FontWeight="ExtraBold" FontFamily="Calibri" FontSize="16" Cursor="Hand" />
            </Grid>
            <Grid Grid.Row="1" Background="{DynamicResource cor-bottomMenu}">
                <Label Name="ClienteMnu" Content="Cadastro de Clientes" Foreground="White" FontWeight="ExtraBold" FontFamily="Calibri" FontSize="16" Cursor="Hand" TabIndex="2147483640" />
            </Grid>
            <Grid Grid.Row="2" Background="{DynamicResource cor-bottomMenu}">
                <Label Name="VeiculosMnu" Content="Cadastro de Veiculos" Foreground="White" FontWeight="ExtraBold" FontFamily="Calibri" FontSize="16" Cursor="Hand" />
            </Grid>
            <Grid Grid.Row="3" Background="{DynamicResource cor-bottomMenu}">
                <Label Name="FornMnu" Content="Cadastro de Fornecedores" Foreground="White" FontWeight="ExtraBold" FontFamily="Calibri" FontSize="16" Cursor="Hand" />
            </Grid>
        </Grid>
        <Grid Grid.Column="1">        
            <TabControl Name="Menutb">
                <TabControl.Background>
                    <ImageBrush ImageSource="/ProjetoGridDesignMelhorado;component/Imagens/LOGIN.png" Stretch="Fill"/>
                </TabControl.Background>
            </TabControl>
        </Grid>
    </Grid>
</Window>
